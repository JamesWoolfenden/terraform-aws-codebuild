#!/usr/bin/env sh

BUILDNUMBER=$(aws ssm get-parameters --name "/${projectroot}/codebuild/${name}/${env}/buildnumber" --output text --query "Parameters[*].{Value:Value}")
BUILDNUMBER=$((BUILDNUMBER + 1))
export BUILDNUMBER=$BUILDNUMBER
aws ssm put-parameter --name "/${projectroot}/codebuild/${name}/${env}/buildnumber" --type "String" --value $BUILDNUMBER --overwrite
export BUILDVERSION=$MAJOR.$MINOR.$BUILDNUMBER
